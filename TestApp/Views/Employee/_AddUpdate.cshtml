@model EmployeeModel

<div class="row">
    <br>
    <div class="col-6" style="margin-left:25%;margin-right:25%; padding:30px;background-color:#F5F5F5 !important; border:1px solid grey; border-radius: 10px;">
        @ViewData["Message"]

        <center>  <h3>Create Employee</h3></center>
        <form asp-action="SaveEmployee" id="frmSaveEmployee">
            <input type="hidden" asp-for="ID" class="form-control" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label">City</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label">Salary</label>
                <input asp-for="Salary" type="number" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label">Department</label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOJ" class="control-label">Date Of Joining</label>
                <input asp-for="DOJ" type="date" class="form-control" />
                <span asp-validation-for="DOJ" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="button" value="Save" onclick="saveEmployees();" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script type="text/javascript" src="~/js/AppJs/appScript.js"></script>

